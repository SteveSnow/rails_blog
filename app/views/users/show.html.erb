<div id="userContainer">
	<div id="userInfo">
		<br>
		<%= label_tag :name,"Name:", :class =>'profilelabel' %>
		<%=  current_user.full_name %>
		<br>
		<%= label_tag :email, 'Email', :class => 'profilelabel' %>
		<%=  current_user.email %>
		<br>
		<div id="newPostContainer">
			<%= form_tag("/newpost", method: "post") do %>
			<%=text_area_tag(:message) %>
			<%= submit_tag("Add") %>
			<% end %>
		</div>
	</div>
	<div id="userPosts">
		<% if session[:user_id] %>
		<% @user.posts.reverse_each do |post| %>
		<div id="postContainer">
			<div id="postMessage">
				<%= post.message %>
			</div>
			<%= link_to 'Delete Post',:controller=> 'users', :action=> 'delete_post', :post=>post.id  %>
			<br>
			<span><%= distance_of_time_in_words(Time.now,post.created_at) %></span>
		</div>
		<br>
		<% end %>
		<% end %>
	</div>
</div>
<% if session[:user_id] %>
<% @users.each do |u|%>
<% if  u.id != session[:user_id] %>
<%= u.first_name %>
<% if @user.user_follows.where(follows_id:u.id).count!=0 %>
<%= link_to 'Unfollow', :controller => "users", :action => "unfollow",:id=>u.id %>
<% else %>
<%= link_to 'Follow', :controller => "users", :action => "follow",:id=>u.id %>
<% end %>
<br>
<% end %>
<% end %>
<% end %>